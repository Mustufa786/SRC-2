                        <RadioButton
                            android:id="@+id/f2a04o"
                            style="@style/radiobutton"
                            android:text="@string/f2a04o" />

                        <RadioButton
                            android:id="@+id/f2a0496"
                            style="@style/radiobutton"
                            android:text="@string/other" />


                        <EditText
                            android:id="@+id/f2a0496x"
                            style="@style/textInput"
                            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:hint="@string/other"
                            android:inputType="text"
                            android:tag="f2a0496"
                            android:text='@{f2a0496.checked? f2a0496x.getText.toString : ""}'
                            android:visibility='@{f2a0496.checked? View.VISIBLE : View.GONE}' />

                    </RadioGroup>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--f2a05-->
            <android.support.v7.widget.CardView style="@style/cardView">


                <LinearLayout style="@style/linearlayout_view_wt_bound">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/f2a05" />

                    <RadioGroup
                        android:id="@+id/f2a05"
                        style="@style/radiogroup">

                        <RadioButton
                            android:id="@+id/f2a05a"
                            style="@style/radiobutton"
                            android:text="@string/f2a05a" />

                        <com.edittextpicker.aliazaz.EditTextPicker
                            app:type="range"
                            app:maxValue="90"
                            app:minValue="1"
                            android:id="@+id/f2a05ax"
                            style="@style/textInput"
                            android:hint="@string/f2a05a"
                            android:inputType="number"
                            android:tag="f2a05a"
                            android:text='@{f2a05a.checked? f2a05ax.getText.toString : ""}'
                            android:visibility='@{f2a05a.checked? View.VISIBLE : View.GONE}' />


                        <RadioButton
                            android:id="@+id/f2a05b"
                            style="@style/radiobutton"
                            android:text="@string/f2a05b" />

                        <RadioButton
                            android:id="@+id/f2a0598"
                            style="@style/radiobutton"
                            android:text="@string/dkn" />


                    </RadioGroup>


                </LinearLayout>
            </android.support.v7.widget.CardView>


            <!--  = = = = =  END OF FORM FIELDS  = = = = = -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_Continue"
                    style="@style/button"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="@string/nextSection" />

                <Button
                    android:id="@+id/btn_End"
                    style="@style/button"
                    android:layout_marginRight="10dp"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="@string/end_interview" />

                <!--'onClick' for btn_End will NOT change and always call 'endInterview'-->
            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</layout>
