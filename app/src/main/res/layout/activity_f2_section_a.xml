            <TextView
                style="@style/textView3Head"
                android:text="@string/f2aHeading" />


            <!--f2a01-->
            <android.support.v7.widget.CardView style="@style/cardView">


                <LinearLayout style="@style/linearlayout_view_wt_bound">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/f2a01" />

                    <RadioGroup
                        android:id="@+id/f2a01"
                        style="@style/radiogroup">

                        <RadioButton
                            android:id="@+id/f2a01a"
                            style="@style/radiobutton"
                            android:text="@string/f2a01a" />

                        <RadioButton
                            android:id="@+id/f2a01b"
                            style="@style/radiobutton"
                            android:text="@string/f2a01b" />

                        <RadioButton
                            android:id="@+id/f2a01c"
                            style="@style/radiobutton"
                            android:text="@string/f2a01c" />

                        <RadioButton
                            android:id="@+id/f2a01d"
                            style="@style/radiobutton"
                            android:text="@string/f2a01d" />

                        <RadioButton
                            android:id="@+id/f2a01e"
                            style="@style/radiobutton"
                            android:text="@string/f2a01e" />

                        <RadioButton
                            android:id="@+id/f2a01f"
                            style="@style/radiobutton"
                            android:text="@string/f2a01f" />

                        <RadioButton
                            android:id="@+id/f2a01g"
                            style="@style/radiobutton"
                            android:text="@string/f2a01g" />

                        <RadioButton
                            android:id="@+id/f2a01h"
                            style="@style/radiobutton"
                            android:text="@string/f2a01h" />

                        <RadioButton
                            android:id="@+id/f2a01i"
                            style="@style/radiobutton"
                            android:text="@string/f2a01i" />

                        <RadioButton
                            android:id="@+id/f2a01j"
                            style="@style/radiobutton"
                            android:text="@string/f2a01j" />

                        <RadioButton
                            android:id="@+id/f2a01k"
                            style="@style/radiobutton"
                            android:text="@string/f2a01k" />


                        <RadioButton
                            android:id="@+id/f2a01l"
                            style="@style/radiobutton"
                            android:text="@string/f2a01l" />

                        <RadioButton
                            android:id="@+id/f2a01m"
                            style="@style/radiobutton"
                            android:text="@string/f2a01m" />

                        <RadioButton
                            android:id="@+id/f2a01n"
                            style="@style/radiobutton"
                            android:text="@string/f2a01n" />

                        <RadioButton
                            android:id="@+id/f2a01o"
                            style="@style/radiobutton"
                            android:text="@string/f2a01o" />

                        <RadioButton
                            android:id="@+id/f2a0196"
                            style="@style/radiobutton"
                            android:text="@string/other" />


                        <EditText
                            android:id="@+id/f2a0196x"
                            style="@style/textInput"
                            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:hint="@string/other"
                            android:inputType="text"
                            android:tag="f2a0196"
                            android:text='@{f2a0196.checked? f2a0196x.getText.toString : ""}'
                            android:visibility='@{f2a0196.checked? View.VISIBLE : View.GONE}' />

                    </RadioGroup>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--f2a02-->
            <android.support.v7.widget.CardView style="@style/cardView">


                <LinearLayout style="@style/linearlayout_view_wt_bound">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/f2a02" />

                    <RadioGroup
                        android:id="@+id/f2a02"
                        style="@style/radiogroup">

                        <RadioButton
                            android:id="@+id/f2a02a"
                            style="@style/radiobutton"
                            android:text="@string/yes" />

                        <RadioButton
                            android:id="@+id/f2a02b"
                            style="@style/radiobutton"
                            android:text="@string/no" />


                    </RadioGroup>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--f2a03-->
            <android.support.v7.widget.CardView
                style="@style/cardView"
                android:visibility='@{f2a02a.checked? View.VISIBLE : View.GONE}'>


                <LinearLayout style="@style/linearlayout_view_wt_bound">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/f2a03" />

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/f2a03"
                        style="@style/textInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="2"
                        android:tag="f2a02a"
                        android:text='@{f2a02a.checked? f2a03.getText.toString: ""}'
                        app:maxValue="90"
                        app:minValue="1"
                        app:type="range" />


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--f2a04-->
            <android.support.v7.widget.CardView style="@style/cardView">


                <LinearLayout style="@style/linearlayout_view_wt_bound">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/f2a04" />

                    <RadioGroup
                        android:id="@+id/f2a04"
                        style="@style/radiogroup">

                        <RadioButton
                            android:id="@+id/f2a04a"
                            style="@style/radiobutton"
                            android:text="@string/f2a04a" />

                        <RadioButton
                            android:id="@+id/f2a04b"
                            style="@style/radiobutton"
