<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.src_2.ui.form1.F1SectionCActivity" />
    </data>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.form1.F1SectionCActivity">


        <LinearLayout
            android:id="@+id/fldGrpSectionF1C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:orientation="vertical">

            <!--f1c01-->
            <android.support.v7.widget.CardView style="@style/cardView">


                <LinearLayout style="@style/linearlayout_view_wt_bound">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/f1c01" />

                    <RadioGroup
                        android:id="@+id/f1c01"
                        style="@style/radiogroup">

                        <RadioButton
                            android:id="@+id/f1c01a"
                            style="@style/radiobutton"
                            android:text="@string/f1c01a" />

                        <RadioButton
                            android:id="@+id/f1c01b"
                            style="@style/radiobutton"
                            android:text="@string/f1c01b" />


                        <RadioButton
                            android:id="@+id/f1c01c"
                            style="@style/radiobutton"
                            android:text="@string/f1c01c" />


                    </RadioGroup>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--f1c02-->
            <android.support.v7.widget.CardView style="@style/cardView">


                <LinearLayout style="@style/linearlayout_view_wt_bound">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/f1c02" />

                    <RadioGroup
                        android:id="@+id/f1c02"
                        style="@style/radiogroup">

                        <RadioButton
                            android:id="@+id/f1c02a"
                            style="@style/radiobutton"
                            android:text="@string/yes" />

                        <RadioButton
                            android:id="@+id/f1c02b"
                            style="@style/radiobutton"
                            android:text="@string/no" />

                    </RadioGroup>


                </LinearLayout>
            </android.support.v7.widget.CardView>


            <!--f1c03-->
            <android.support.v7.widget.CardView style="@style/cardView">


                <LinearLayout style="@style/linearlayout_view_wt_bound">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/f1c03" />


                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/f1c03"
                        style="@style/textInput"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/number"
                        android:maxLength="3"
                        app:maxValue="15"
                        app:minValue="1"
                        app:type="range" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--f1c04-->
            <android.support.v7.widget.CardView style="@style/cardView">


                <LinearLayout style="@style/linearlayout_view_wt_bound">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/f1c04" />


                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/f1c04"
                        style="@style/textInput"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/number"
                        android:maxLength="3"
                        app:maxValue="18"
                        app:minValue="1"
                        app:type="range" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--f1c05-->
            <android.support.v7.widget.CardView style="@style/cardView">


                <LinearLayout style="@style/linearlayout_view_wt_bound">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/f1c05" />


                    <LinearLayout
                        android:tag="0"
                        android:id="@+id/f1c05check"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <CheckBox
                            android:id="@+id/f1c05a"
                            style="@style/checkbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/f1c05a" />

                        <CheckBox
                            android:id="@+id/f1c05b"
                            style="@style/checkbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/f1c05b" />

                        <CheckBox
                            android:id="@+id/f1c05c"
                            style="@style/checkbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/f1c05c" />

                        <CheckBox
                            android:id="@+id/f1c05d"
                            style="@style/checkbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/f1c05d" />

                        <CheckBox
                            android:id="@+id/f1c05e"
                            style="@style/checkbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/f1c05e" />

                        <CheckBox
                            android:id="@+id/f1c05f"
                            style="@style/checkbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/f1c05f" />

                        <CheckBox
                            android:id="@+id/f1c05g"
                            style="@style/checkbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/f1c05g" />

                        <CheckBox
                            android:id="@+id/f1c05h"
                            style="@style/checkbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/f1c05h" />

                        <CheckBox
                            android:id="@+id/f1c05i"
                            style="@style/checkbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/f1c05i" />

                        <CheckBox
                            android:id="@+id/f1c05j"
                            style="@style/checkbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/f1c05j" />

                        <CheckBox
                            android:id="@+id/f1c05k"
                            style="@style/checkbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/f1c05k" />

                        <CheckBox
                            android:id="@+id/f1c05l"
                            style="@style/checkbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/f1c05l" />

                        <CheckBox
                            android:id="@+id/f1c05m"
                            style="@style/checkbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/f1c05m" />

                        <CheckBox
                            android:id="@+id/f1c05n"
                            style="@style/checkbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/f1c05n" />


                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <!--  = = = = =  END OF FORM FIELDS  = = = = = -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_Continue"
                    style="@style/button"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="@string/nextSection" />

                <Button
                    android:id="@+id/btn_End"
                    style="@style/button"
                    android:layout_marginRight="10dp"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="@string/end_interview" />

                <!--'onClick' for btn_End will NOT change and always call 'endInterview'-->
            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</layout>
